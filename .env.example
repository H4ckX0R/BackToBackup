# ==========================================
# BackToBackup Monorepo - Environment Variables
# ==========================================
# Este archivo es un ejemplo. Copia este archivo a devops/.env
# y ajusta los valores según tu entorno.

# PostgreSQL Configuration
POSTGRES_USER=backup_user
POSTGRES_PASSWORD=backup_pass
POSTGRES_DB=backtobackup
POSTGRES_HOST=db
DB_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key

# JWT Secrets (Genera valores seguros para producción)
JWT_SECRET=your_jwt_secret_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_in_production
JWT_REGISTER_DEVICE_SECRET=your_jwt_register_device_secret_change_in_production
JWT_DEVICE_SECRET=your_jwt_device_secret_change_in_production
JWT_DEVICE_REFRESH_SECRET=your_jwt_device_refresh_secret_change_in_production

# Application Configuration
NODE_ENV=development
PORT=3000

